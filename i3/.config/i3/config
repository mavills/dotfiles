# screen area to clipboard
bindsym $win+Shift+s exec maim -s | xclip -selection clipboard -t image/png
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png
# complete screen to clipboard
bindsym Print exec maim | xclip -selection clipboard -t image/png
# Window to clipboard
bindsym --release $alt+Sys_Req exec --no-startup-id maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
# Pixel value under cursor to clipboard
bindsym $win+Shift+Print exec "maim -st 9999999 | convert - -resize 1x1\! -format '%[pixel:p{0,0}]' info:- | tr -cd '[:digit:],.' | xclip -selection clipboard


