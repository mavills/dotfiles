# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# System mode, for shutting down etc.
set $Locker ~/.config/scripts/lock.sh && sleep 1

set $mode_system System (l) lock, (e) logout, (Shift+s) suspend, (h) hibernate, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym Shift+s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindcode $alt+$win+49 mode "$mode_system"

mode "brightness" {
    bindsym twosuperior exec xrandr --output eDP-1 --brightness 0.0
    bindsym ampersand exec xrandr --output eDP-1 --brightness 0.1
    bindsym eacute exec xrandr --output eDP-1 --brightness 0.2
    bindsym quotedbl exec xrandr --output eDP-1 --brightness 0.3
    bindsym apostrophe exec xrandr --output eDP-1 --brightness 0.4
    bindsym parenleft exec xrandr --output eDP-1 --brightness 0.5
    bindsym section exec xrandr --output eDP-1 --brightness 0.6
    bindsym egrave exec xrandr --output eDP-1 --brightness 0.7
    bindsym exclam exec xrandr --output eDP-1 --brightness 0.8
    bindsym ccedilla exec xrandr --output eDP-1 --brightness 0.9
    bindsym agrave exec xrandr --output eDP-1 --brightness 1.0
    

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+F12 mode "default"

}

bindsym $mod+F12 mode "brightness" 

# Set passthrough mode for applications with shortcuts.
mode "passthrough" {
    bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode "passthrough"

